#!/bin/bash

set -e

cd /fuzzer
rm -rf fuzzing-server-poc
git clone git@github.com:hypothesis-imperial/fuzzing-server-poc.git
cd fuzzing-server-poc
virtualenv  -p python3 venv
source venv/bin/activate
pip install -r requirements.txt
# Kill old tmux server
tmux kill-server

tmux new-session -d -s fuzzer
tmux send-keys sudo python3 app.py C-m
# tmux detach -s rtb123
